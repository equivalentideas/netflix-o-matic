<h1><%= words_links(@genre.words) %></h1>

<% if @genre.movies_count > 0 %>
	
	<ol class="covers">
    <% @genre.movies.each do |movie| %>
  		<li>
        <%= link_to movie_path(movie) do %> 
          <%= image_tag movie.cover_url %>
        <% end %>
      </li>
    <% end %>
	</ol>

	<div style="clear: both;"><%= link_to "View on Netflix", netflix_genre_url(@genre.id) %></div>

<% else %>

	<p>No movies :(</p>

<% end %>